<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ecf0f1"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formulari"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josep.FormulariAutoescola.Formulari"
    android:weightSum="1">

    <TextView
        android:text="Formulari autoescola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idtextform"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="20dp"
        android:id="@+id/listView"
        />

    <Button
        android:text="Consultar Formulari"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:id="@+id/consultarFormulari"
        android:background="#3498db"
        />

    <Button
        android:text="Crear formulari"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:id="@+id/crearFormulari"
        android:background="#3498db"
        />

    <Button
        android:text="Editar Formulari"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editarFormulari"
        android:background="#3498db"

        />

    <Button
        android:text="Esborrar formulari"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:id="@+id/esborrarFormulari"
        android:background="#3498db"
        />
</LinearLayout>
