<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ecf0f1"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="1200dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.example.josep.FormulariAutoescola.Pantalles.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formulari autoescola:"
            android:layout_alignBaseline="@+id/editText1"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewInici"

            android:layout_marginLeft="65dp"
            android:layout_weight="0.73"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@android:color/black" />



        </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:weightSum="1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escriu el teu nom:"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_marginLeft="0dp"
        android:layout_weight="0.73"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/datePicker"
        android:layout_alignRight="@+id/datePicker"
        android:layout_alignEnd="@+id/datePicker"
        android:layout_toEndOf="@+id/textView3"
        android:layout_weight="0.15"
        android:hint="Nom"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:textSize="14sp"
        android:textColorHint="@android:color/darker_gray"

        android:textColor="@android:color/black"
        android:inputType="textPersonName" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escriu el teu mail:"
            android:layout_alignBaseline="@+id/editText1"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView2"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.73"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textSize="14sp"

            android:fontFamily="sans-serif-smallcaps" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/datePicker"
            android:layout_alignRight="@+id/datePicker"
            android:layout_alignEnd="@+id/datePicker"
            android:layout_toEndOf="@+id/textView3"
            android:layout_weight="0.15"
            android:textColorHint="@android:color/darker_gray"

            android:hint="Email"
            android:textSize="14sp"
            android:singleLine="false"
            android:selectAllOnFocus="false"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:focusable="false"
        android:focusableInTouchMode="false">>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona la data:"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:layout_marginLeft="0dp"
        android:layout_weight="0.73"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="normal|bold" />
        <Button
            android:text="Selecciona la Data:"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonData"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#3498db"
            android:layout_width="180dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa un test per enviar el formulari:"
            android:layout_alignBaseline="@+id/editText1"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewFinal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            android:layout_weight="0.73"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />



    </LinearLayout>
    <Button
        android:text="Test 1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTest1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:background="#3498db"/>

    <Button
        android:text="Test 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTest2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"

        android:background="#3498db"
        android:elevation="0dp"
        android:fontFamily="sans-serif-medium" />
    <Button
        android:text="Test 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTest3"
        android:layout_marginTop="5dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:background="#3498db" />
</LinearLayout>

